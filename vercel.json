{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/portfolio/?$", "dest": "/portfolio.html" },
    { "src": "^/projects/?$", "dest": "/projects.html" },
    { "src": "^/careers/?$", "dest": "/careers.html" },
    { "src": "^/founder/?$", "dest": "/founder.html" },
    { "src": "^/feedback/?$", "dest": "/feedback.html" }
  ]
}
